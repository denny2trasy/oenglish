<%= form_for @lesson, url: url,  html: {class: "form-horizontal"} do |f| %>
	<% %w{name url}.each do |item| %>
		<div class="form-group">
			<%= f.label t("c_#{item}"), :for => "lesson_#{item}", :class => "col-sm-2 control-label"%>
			<div class="col-sm-10">
				<%= f.text_field item.to_sym, :class => "form-control", :placeholder => t("c_#{item}") %>
		    </div>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label t(:script), :for => "lesson_script", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.text_area :script, :class => "form-control" %>
	    </div>
	</div>
	<div class="form-group">
		<%= f.label t(:desc), :for => "lesson_desc", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.text_area :desc, :class => "form-control" %>
	    </div>
	</div>
	<%= f.hidden_field :course_id %>
	<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
			<%= f.button t(:submit), :class => "btn btn-default"%>
	    </div>
	  </div>
<% end %>