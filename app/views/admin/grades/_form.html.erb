<%= form_for @grade, url: url,  html: {class: "form-horizontal"} do |f| %>
	<div class="form-group">
		<%= f.label t(:c_name), :for => "grade_name", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.text_field :name, :class => "form-control" %>
	    </div>
	</div>
	<div class="form-group">
		<%= f.label t(:teacher_id), :for => "grade_teacher_id", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.select :teacher_id, teachers_list,{}, {:class => "form-control"} %>
	    </div>
	</div>
	<% %w{num_of_students start_date start_hour start_minute duration repeat_wday}.each do |item| %>
		<div class="form-group">
			<%= f.label t(item), :for => "grade_#{item}", :class => "col-sm-2 control-label"%>
			<div class="col-sm-10">
				<%= f.text_field item.to_sym, :class => "form-control", :placeholder => t(item) %>
		    </div>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label t(:status), :for => "grade_status", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.select :status, grade_status,{}, {:class => "form-control"} %>
	    </div>
	</div>	
	<div class="form-group">
		<%= f.label t(:desc), :for => "grade_desc", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.text_area :desc, :class => "form-control" %>
	    </div>
	</div>
	<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
			<%= f.button t(:submit), :class => "btn btn-default"%>
	    </div>
	  </div>
<% end %>