<%= form_for @schedule, url: url,  html: {class: "form-horizontal"} do |f| %>
	<div class="form-group">
		<%= f.label t(:teacher_id), :for => "schedule_teacher_id", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.select :teacher_id, teachers_list, {}, :class => "form-control" %>
	    </div>
	</div>
	<div class="form-group">
		<%= f.label t(:grade_id), :for => "schedule_grade_id", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.select :grade_id, grades_list, {}, :class => "form-control" %>
	    </div>
	</div>
	<div class="form-group">
		<%= f.label t(:title), :for => "schedule_title", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.text_field :title, :class => "form-control", :placeholder => t(:title) %>
	    </div>
	</div>
	<div class="form-group">
		<%= f.label t(:start_at), :for => "schedule_start_at", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.datetime_select :start_at, :class => "form-control", :placeholder => t(:start_at) %>
	    </div>
	</div>
	<div class="form-group">
		<%= f.label t(:end_at), :for => "schedule_start_at", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.datetime_select :end_at, :class => "form-control", :placeholder => t(:end_at) %>
	    </div>
	</div>
	<%= f.hidden_field :webex_pwd %>
	<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
			<%= f.button t(:submit), :class => "btn btn-default"%>
	    </div>
	  </div>
<% end %>

