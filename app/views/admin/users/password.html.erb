<%= form_for @user, url: admin_user_path(@user),  html: {class: "form-horizontal"} do |f| %>
	<div class="form-group">
		<%= f.label t(:password), :for => "user_password", :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.password_field :password, :class => "form-control", :placeholder => t(:password)  %>
	    </div>
	</div>
	<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
			<%= f.button t(:submit), :class => "btn btn-default"%>
	    </div>
	  </div>
<% end %>