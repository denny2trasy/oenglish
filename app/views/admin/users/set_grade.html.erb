<%= form_tag do_set_admin_user_path(@user), method: :post,  :class => "form-horizontal" do |f| %>
	<div class="form-group">
		<%= label_tag :grade, t(:grade), :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= select_tag :grade_id, options_from_collection_for_select(Grade.opened,:id,:name), :class => "form-control" %>
	    </div>
	</div>
	<div class="form-group">
		<%= label_tag :deadline, t(:deadline), :class => "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= text_field_tag :deadline, (Time.now + 1.month).to_date, :class => "form-control" %>
	    </div>
	</div>
	<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
			<%= button_tag t(:submit), :class => "btn btn-default"%>
	    </div>
	  </div>
<% end %>