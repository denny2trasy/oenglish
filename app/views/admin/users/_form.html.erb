<%= form_for @user, url: url,  html: {class: "form-horizontal"} do |f| %>
	<% %w{email login name password}.each do |item| %>
		<div class="form-group">
			<%= f.label t(item), :for => "user_#{item}", :class => "col-sm-2 control-label"%>
			<div class="col-sm-10">
				<%= f.text_field item.to_sym, :class => "form-control", :placeholder => t(item) %>
		    </div>
		</div>
	<% end %>
	<%= f.hidden_field :u_type %>
	<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
			<%= f.button t(:submit), :class => "btn btn-default"%>
	    </div>
	  </div>
<% end %>